---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection('posts');
---

<Layout>
  <h1>Posts</h1>
  {posts.length ? (
    <ul>
      {posts.map(post => (
        <li><a href={`/${post.data.slug}`}>{post.data.title}</a></li>
      ))}
    </ul>
  ) : (
    <p>No posts found</p>
  )}
</Layout>
